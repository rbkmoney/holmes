    {woody_user_identity, {git, "git@github.com:rbkmoney/woody_erlang_user_identity.git", {branch, "master"}}},
    {dmsl, {git, "git@github.com:rbkmoney/damsel.git", {branch, "release/erlang/master"}}},
    {getopt, {git, "https://github.com/jcomellas/getopt.git", {branch, "master"}}}
]}.

{escript_main_app, migration}.
{escript_emu_args, "%%! +sbtu +A0 -noshell -boot start_clean\n -escript main party_migration_escript"}.
